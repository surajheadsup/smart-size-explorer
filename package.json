{
  "name": "smart-size-explorer",
  "displayName": "Smart Size Explorer",
  "icon": "icon.png",
  "description": "Explore file and folder sizes in your workspace with live updates, caching, and smart sorting.",
  "version": "1.3.12",
  "publisher": "sk2you",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/surajheadsup/smart-size-explorer.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "smartSizeExplorer",
          "name": "Size Explorer"
        }
      ]
    },
    "configuration": {
      "title": "Smart Size Explorer",
      "properties": {
        "smartSizeExplorer.showNodeModules": {
          "type": "boolean",
          "default": false,
          "description": "Show node_modules folder size (may be slow for large projects)"
        },
        "smartSizeExplorer.sortBySize": {
          "type": "boolean",
          "default": true,
          "description": "Sort files and folders by size (largest first)"
        },
        "smartSizeExplorer.cacheTTL": {
          "type": "number",
          "default": 5000,
          "description": "Cache duration in milliseconds for folder size calculations"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc",
    "package": "vsce package"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0"
  }
}
